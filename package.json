{
  "name": "hss-calendar-workspace",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve demo",
    "build": "ng build hss-calendar",
    "watch": "ng build hss-calendar --watch --configuration development",
    "test": "ng test hss-calendar",
    "lib:build": "ng build hss-calendar",
    "lib:watch": "ng build hss-calendar --watch",
    "demo:start": "ng serve demo",
    "build:prod": "ng build hss-calendar && ng build demo --base-href /hss-calendar/ --configuration production",
    "deploy": "npm run build:prod",
    "deploy:gh": "npm run build:prod && npx angular-cli-ghpages --dir=dist/demo/browser",
    "lib:publish": "npm run lib:build && cd dist/hss-calendar"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.9.3",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.1",
    "@angular/cli": "^21.0.2",
    "@angular/compiler-cli": "^21.0.0",
    "angular-cli-ghpages": "^3.0.2",
    "jsdom": "^27.1.0",
    "ng-packagr": "^21.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}